commands:
  01_install_audio_libraries:
    command: |
      yum install -y \
        alsa-lib-devel \
        pulseaudio-libs-devel \
        sox \
        sox-devel \
        libsndfile \
        libsndfile-devel
    ignoreErrors: true
  
  02_create_audio_cache_dir:
    command: "mkdir -p /var/app/current/audio_cache && chown webapp:webapp /var/app/current/audio_cache"
    ignoreErrors: true
  
  03_create_outputs_dir:
    command: "mkdir -p /var/app/current/outputs && chown webapp:webapp /var/app/current/outputs"
    ignoreErrors: true

container_commands:
  01_verify_ffmpeg_installation:
    command: |
      echo "Verifying ffmpeg installation..."
      which ffmpeg && ffmpeg -version | head -1 || echo "ffmpeg not found"
      echo "PATH: $PATH"
    ignoreErrors: true
