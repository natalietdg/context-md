container_commands:
  01_install_whisperx:
    command: "source /var/app/venv/*/bin/activate && pip install git+https://github.com/m-bain/whisperx.git"
    leader_only: true
  02_install_requirements:
    command: "source /var/app/venv/*/bin/activate && pip install -r requirements.txt"
    leader_only: true
